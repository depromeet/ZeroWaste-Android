<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.depromeet.zerowaste.data.home.Mission" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F7F6FB"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_home_mission_iv_bg_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:alpha="0.5"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_home_mission_iv_icon"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="17.5dp"
                    android:layout_marginBottom="26dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/ic_sample_24dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_home_mission_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:text="@{item.data.name}"
                    android:textColor="#0F1469"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/main_home_mission_iv_icon"
                    app:layout_constraintTop_toTopOf="@id/main_home_mission_iv_icon"
                    tools:text="수돗물 끓여 마시기" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_home_mission_tv_profile_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@id/main_home_mission_iv_icon"
                    app:layout_constraintStart_toStartOf="@id/main_home_mission_tv_title"
                    app:layout_constraintTop_toBottomOf="@id/main_home_mission_tv_title"
                    app:srcCompat="@drawable/ic_sample_24dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_home_mission_tv_profile_id"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/main_home_mission_tv_profile_logo"
                    app:layout_constraintStart_toEndOf="@id/main_home_mission_tv_profile_logo"
                    app:layout_constraintTop_toTopOf="@id/main_home_mission_tv_profile_logo"
                    tools:text="푸른지구" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_home_mission_tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text=" l "
                    android:textColor="@color/gray_2"
                    app:layout_constraintBottom_toBottomOf="@id/main_home_mission_tv_profile_id"
                    app:layout_constraintStart_toEndOf="@id/main_home_mission_tv_profile_id"
                    app:layout_constraintTop_toTopOf="@id/main_home_mission_tv_profile_id" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_home_mission_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/main_home_mission_tv_profile_id"
                    app:layout_constraintStart_toEndOf="@id/main_home_mission_tv_text"
                    app:layout_constraintTop_toTopOf="@id/main_home_mission_tv_profile_id"
                    tools:text="2,431명" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_home_mission_iv_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="19.08dp"
                    android:layout_marginBottom="18.22dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/main_home_mission_tv_profile_logo"
                    app:srcCompat="@drawable/ic_sample_24dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/main_home_my_mission_chip_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    app:layout_constraintBottom_toBottomOf="@id/main_home_mission_iv_recommend"
                    app:layout_constraintEnd_toStartOf="@id/main_home_mission_iv_recommend"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_home_mission_iv_recommend">

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="#FFE5EAFF"
                        android:text="줄이기" />

                </com.google.android.material.chip.ChipGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>