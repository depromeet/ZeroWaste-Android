<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mission_suggest_phase5_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/kotra_bold"
            android:textSize="22sp"
            android:text="@string/mission_suggest_phase5_title"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mission_suggest_phase5_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_1"
            android:textSize="15sp"
            android:text="@string/mission_suggest_phase5_sub_title"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/mission_suggest_phase5_title"
            app:layout_constraintTop_toBottomOf="@id/mission_suggest_phase5_title"/>

        <LinearLayout
            android:id="@+id/mission_suggest_phase5_checkbox_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@id/mission_suggest_phase5_sub_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>