<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.depromeet.zerowaste.data.mission.Rank" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/item_main_mission_rank_card"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/item_main_mission_rank_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:loadImageCenterCrop="@{item.img}"
                tools:ignore="ContentDescription"
                tools:background="@color/gray_2"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/item_main_mission_rank_txt"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/rect_round_opacity40_black_32"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/apple_sd_gothic_neo_b"
            android:layout_marginTop="7dp"
            android:layout_marginStart="7dp"
            android:text="@{Integer.toString(item.rank)+`등`}"
            app:layout_constraintStart_toStartOf="@id/item_main_mission_rank_card"
            app:layout_constraintTop_toTopOf="@id/item_main_mission_rank_card"
            tools:text="1등"/>
        <TextView
            android:id="@+id/item_main_mission_rank_user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_1"
            android:textSize="14sp"
            android:fontFamily="@font/apple_sd_gothic_neo_r"
            android:layout_marginTop="9dp"
            android:text="@{item.name+`님`}"
            app:layout_constraintStart_toStartOf="@id/item_main_mission_rank_card"
            app:layout_constraintEnd_toEndOf="@id/item_main_mission_rank_card"
            app:layout_constraintTop_toBottomOf="@id/item_main_mission_rank_card"
            tools:text="김종훈님"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>