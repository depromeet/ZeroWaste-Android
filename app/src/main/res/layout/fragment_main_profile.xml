<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.depromeet.zerowaste.feature.main.main_profile.MainProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/main_profile_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:text="프로필"
            android:textColor="@color/real_black"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/main_profile_iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21.22dp"
            app:layout_constraintBottom_toBottomOf="@id/main_profile_tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_profile_tv_title"
            app:srcCompat="@drawable/ic_sample_24dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/main_profile_cv_profile"
            android:layout_width="0dp"
            android:layout_height="143dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="18dp"
            app:cardBackgroundColor="#F7F6FB"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_profile_tv_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/main_profile_iv_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="23.08dp"
                    android:layout_marginTop="23dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_sample_24dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_profile_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8.42dp"
                    android:text="김지구"
                    android:textColor="@color/real_black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/main_profile_iv_image"
                    app:layout_constraintTop_toTopOf="@id/main_profile_iv_image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/main_profile_tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/real_black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/main_profile_tv_name"
                    app:layout_constraintTop_toBottomOf="@id/main_profile_tv_name"
                    tools:text="지구를 이제 막 지키기 시작한" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/main_home_my_mission_btn_auth"
                    android:layout_width="96dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="19dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/shape_17224d_radius_8dp"
                    android:stateListAnimator="@null"
                    android:text="인증하기"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_goneMarginBottom="14dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>