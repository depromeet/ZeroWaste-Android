<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.depromeet.zerowaste.feature.main.main_mission.MainMissionViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/main_mission_motion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sub1"
        app:layoutDescription="@xml/scene_main_mission">

        <ImageView
            android:id="@+id/main_mission_icon"
            android:layout_width="98dp"
            android:layout_height="89dp"
            android:layout_marginTop="26dp"
            android:src="@color/point"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_mission_tab"
            tools:ignore="ContentDescription" />
        
        <TextView
            android:id="@+id/main_mission_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/gray_2"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_mission_icon"
            tools:text="카페에서 할 수 있는\n제로 웨이스트를 알려 드릴께요!"/>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_mission_ranker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isVertical="@{false}"
            app:layout_constraintTop_toBottomOf="@id/main_mission_txt"
            tools:layout_height="126dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_mission_list_parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/rect_round_top_white_32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_mission_ranker">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/main_mission_scroll_nested"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/main_mission_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isVertical="@{true}" />
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_mission_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/sub1"
            app:tabMode="scrollable"/>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>