<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.depromeet.zerowaste.data.mission.Mission" />
        <variable
            name="fragment"
            type="com.depromeet.zerowaste.feature.mission.approve.MissionApproveFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <ImageView
            android:id="@+id/mission_approve_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_approve_mission"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mission_approve_txt"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/mission_approve_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/kotra_bold"
            android:text="@string/mission_approve"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toTopOf="@id/mission_approve_content_back"
            app:layout_constraintTop_toBottomOf="@id/mission_approve_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/mission_approve_content_back"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:background="@drawable/rect_rount_8_gray_0_5"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toTopOf="@id/mission_approve_cnt"
            app:layout_constraintTop_toBottomOf="@id/mission_approve_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/mission_approve_mission_img"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/rect_round_4"
            app:loadImage="@{item.bannerImgUrls[0]}"
            app:layout_constraintStart_toStartOf="@id/mission_approve_content_back"
            app:layout_constraintTop_toTopOf="@id/mission_approve_content_back"
            app:layout_constraintBottom_toBottomOf="@id/mission_approve_content_back"
            android:layout_marginStart="12dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/mission_approve_mission_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@{item.name}"
            android:layout_marginTop="23dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/mission_approve_content_back"
            app:layout_constraintStart_toEndOf="@id/mission_approve_mission_img"
            app:layout_constraintEnd_toEndOf="@id/mission_approve_content_back"
            tools:text="수돗물오래마시기수돗물오래마시기수돗물오래마시기수돗물오래마시기"/>
        <View
            android:id="@+id/mission_approve_location_img"
            android:layout_width="9dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_location_gray"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/mission_approve_mission_name"
            app:layout_constraintTop_toBottomOf="@id/mission_approve_mission_name"/>
        <TextView
            android:id="@+id/mission_approve_location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_3"
            android:textSize="13sp"
            android:layout_marginStart="4dp"
            android:text="@{item.place.textId}"
            app:layout_constraintStart_toEndOf="@id/mission_approve_location_img"
            app:layout_constraintTop_toTopOf="@id/mission_approve_location_img"
            app:layout_constraintBottom_toBottomOf="@id/mission_approve_location_img"
            tools:text="카페"/>
        <View
            android:id="@+id/mission_approve_people_img"
            android:layout_width="10dp"
            android:layout_height="11dp"
            android:background="@drawable/ic_people_gray"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/mission_approve_location_txt"
            app:layout_constraintTop_toTopOf="@id/mission_approve_location_img"
            app:layout_constraintBottom_toBottomOf="@id/mission_approve_location_img"/>
        <TextView
            android:id="@+id/mission_approve_people_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_3"
            android:textSize="13sp"
            android:layout_marginStart="4dp"
            android:text="@{item.inProgressCount + @string/mission_participate_count}"
            app:layout_constraintStart_toEndOf="@id/mission_approve_people_img"
            app:layout_constraintTop_toTopOf="@id/mission_approve_location_img"
            app:layout_constraintBottom_toBottomOf="@id/mission_approve_location_img"
            tools:text="230명 참여중"/>
        <TextView
            android:id="@+id/mission_approve_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/mission_approve_btn"
            app:layout_constraintTop_toBottomOf="@id/mission_approve_content_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="미션인증까지 10:09:11 남았어요!"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mission_approve_btn"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="65dp"
            android:text="@string/mission_approve_immediately"
            app:layout_constraintTop_toBottomOf="@id/mission_approve_cnt"
            app:layout_constraintBottom_toTopOf="@id/mission_approve_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/mission_approve_next"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/mission_approve_next_time"
            android:onClick="@{() -> fragment.clickNextTime()}"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/mission_approve_btn"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>