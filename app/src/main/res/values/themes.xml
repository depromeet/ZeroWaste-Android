<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZeroWaste" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background" />
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sub1</item>
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
    </style>

    <style name="Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.ZeroWaste.BottomNav">
        <item name="fontFamily">@font/apple_sd_gothic_neo_r</item>
    </style>

    <style name="main_mission_tab_text_style">
        <item name="android:fontFamily">@font/apple_sd_gothic_neo_r</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_round_top_white_32</item>
    </style>

    <style name="suggestEditStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/gray_2</item>
        <item name="colorControlActivated">@color/main_enabled</item>
    </style>

    <style name="suggestCheckBoxStyle">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/main_enabled</item>
    </style>
</resources>